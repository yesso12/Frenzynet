{
  "manifest_version": 3,
  "name": "FlickFuse Party (Presented by Frenzy Nets)",
  "description": "Start or join synced watch parties from your browser, extension-style.",
  "version": "1.1.0",
  "action": {
    "default_title": "FlickFuse",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess"
  ],
  "host_permissions": [
    "https://*.netflix.com/*",
    "https://*.youtube.com/*",
    "https://*.disneyplus.com/*",
    "https://*.hulu.com/*",
    "https://*.primevideo.com/*",
    "https://*.frenzynets.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.netflix.com/*",
        "https://*.youtube.com/*",
        "https://*.disneyplus.com/*",
        "https://*.hulu.com/*",
        "https://*.primevideo.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "adblock_rules",
        "enabled": false,
        "path": "rules/adblock-rules.json"
      }
    ]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "flickfuse@frenzynets.com",
      "strict_min_version": "109.0"
    }
  }
}
